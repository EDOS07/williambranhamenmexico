generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./wbmxdb.sqlite"
}

model Iglesia {
  id             Int         @id @default(autoincrement())
  tabernaculo    String
  pastor         String?
  correo         String?
  numero1        String?
  numero2        String?
  direccion      String?
  estado         String?
  nuestrocaminar String?
  horarios       Json?
  actividades    Actividad[]
  misiones       Mision[]
}

model Mision {
  id             Int     @id @default(autoincrement())
  mision         String
  encargado      String?
  correo         String?
  numero1        String?
  numero2        String?
  direccion      String?
  iglesiaId      Int
  estado         String?
  nuestrocaminar String?
  horarios       Json?
  iglesia        Iglesia @relation(fields: [iglesiaId], references: [id], onDelete: Cascade)
}

model Actividad {
  id        Int                  @id @default(autoincrement())
  iglesiaId Int
  titulo    String
  evento    Int                  @default(0)
  fecha     String
  iglesia   Iglesia              @relation(fields: [iglesiaId], references: [id], onDelete: Cascade)
  contenido ContenidoActividad[]
}

model ContenidoActividad {
  id           Int       @id @default(autoincrement())
  actividadId  Int
  txtContenido String
  galeria      String
  portada      String
  pieDeFoto    String
  audio        String
  video1       String?
  video2       String?
  redaccion    String
  fotografia   String
  actividad    Actividad @relation(fields: [actividadId], references: [id], onDelete: Cascade)
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
